{
  "name": "project-skyring",
  "private": true,
  "scripts": {
    "lerna": "lerna",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "tap": "tap",
    "nyc": "nyc",
    "test": "npm run local tap -- --coverage-report=text --coverage-report=json -Rclassic",
    "test:coverage": "tap -Rclassic --coverage-report=json",
    "local": "env $(cat local.env)",
    "docs": "jsdoc -c jsdoc.json && apidoc -i packages/skyring/lib/server -o docs/api",
    "check": "check-pkg -d !docs -d !node_modules -d !examples -d !.git",
    "start": "npm run compose:up",
    "stop": "npm run compose:down"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "chalk": "^3.0.0",
    "check-pkg": "^2.1.1",
    "codeclimate-test-reporter": "^0.5.1",
    "get-port": "^5.1.1",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.5.5",
    "lerna": "^3.20.2",
    "nats": "^1.4.8",
    "nyc": "^15.0.1",
    "tap": "^14.10.7"
  },
  "dependencies": {},
  "tap": {
    "nyc-arg": [
      "--exclude=packages/ringpop/**/*.js"
    ]
  }
}
